.dot
  overflow hidden
  word-wrap normal
  white-space nowrap
  text-overflow ellipsis
.dot2
.dot--l2
.dot--l3
.dot3
  display: -webkit-box
  overflow: hidden
  text-overflow: ellipsis
  -webkit-line-clamp: 2
  -webkit-box-orient: vertical
.dot3
.dot--l3
  -webkit-line-clamp: 3

// 模糊效果
.filter
  backdrop-filter blur(15px)
  -webkit-backdrop-filter blur(15px)
// 渐隐效果
.fade-enter-active, .fade-leave-active
  transition opacity .35s
.fade-enter, .fade-leave-to
  opacity 0
@keyframes yo-rotate
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)
// slide-left
.slideIn-enter-active
.slideIn-leave-active
  position absolute
  top 0
  right 0
  width 100%
  height 100%
  overflow hidden
  transition right 3s
  background-color #fff
.slideIn-leave-active
.slideIn-leave-to
  right 0
.slideIn-enter-active
  z-index 2
.slideIn-leave-active
  z-index 1
.slideIn-enter
  position absolute
  top 0
  right -100%
