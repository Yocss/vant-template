.dot
  overflow hidden
  word-wrap normal
  white-space nowrap
  text-overflow ellipsis
.dot2
.dot--l2
.dot--l3
.dot3
  display: -webkit-box
  overflow: hidden
  text-overflow: ellipsis
  -webkit-line-clamp: 2
  -webkit-box-orient: vertical
.dot3
.dot--l3
  -webkit-line-clamp: 3

// 模糊效果
.filter
  backdrop-filter blur(15px)
  -webkit-backdrop-filter blur(15px)
// 渐隐效果
.fade-enter-active, .fade-leave-active
  transition opacity .35s
.fade-enter, .fade-leave-to
  opacity 0
@keyframes yo-rotate
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)
// 页面过度效果
$sec = .3s
.slideIn-enter-active
.slideOut-leave-active
  position absolute
  top 0
  width 100%
  height 100%
  overflow hidden
  background-color #fff
  box-shadow: 0 0 3px 0 rgba(#000, .15)
.slideIn-enter-active
  animation slideIn $sec ease
.slideIn-leave-active
  animation slideInOpacity $sec ease
.slideOut-enter-active
  animation slideOutOpacity $sec ease
  z-index 1
.slideOut-leave-active
  animation slideOut $sec ease
  z-index 2
@keyframes slideIn
  from
    right -100%
  to
    right 0
@keyframes slideInOpacity
  from
    opacity 1
  to
    opacity .6
@keyframes slideOut
  from
    right 0
  to
    right -100%
@keyframes slideOutOpacity
  from
    opacity .6
  to
    opacity 1
